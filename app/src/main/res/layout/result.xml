<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_cheers"
        android:alpha="0.75"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textLose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sentence_lose"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="serif-monospace"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/nameLoser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@id/textLose"
            android:text="@string/player"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:fontFamily="serif-monospace" />

        <LinearLayout
            android:id="@+id/go_again"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/go_again"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/icon_go_again"
                android:layout_gravity="center"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>